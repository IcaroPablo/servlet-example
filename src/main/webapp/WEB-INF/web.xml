<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>employeeController</servlet-name>
        <servlet-class>com.example.common.interfaces.rest.controllers.EmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employeeController</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>com.example.common.interfaces.rest.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userController</servlet-name>
        <servlet-class>com.example.common.interfaces.rest.controllers.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/check-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>com.example.common.interfaces.rest.controllers.ProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shoppingController</servlet-name>
        <servlet-class>com.example.common.interfaces.rest.controllers.ShoppingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shoppingController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>shoppingController</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shoppingController</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>


</web-app>
